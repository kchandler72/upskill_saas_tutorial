<div class = "container">
  <div class = "row">
    <div class = "col-md-3 text-centered">
      <%= image_tag @user.profile.avatar.url %>
    </div>
    <div class = "col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><%= @user.profile.job_title %></h3>
      <div class = "well">
        <h3><%= @user.profile.description %></h3>
      </div>
      <% if current_user.plan_id == 2 %>
        <div class = "well">
          <h3><%= @user.profile.phone_number %></h3>
          <h3><%= @user.profile.contact_email %></h3>
        </div>
      <% end %>
    </div> 
  </div>
</div>